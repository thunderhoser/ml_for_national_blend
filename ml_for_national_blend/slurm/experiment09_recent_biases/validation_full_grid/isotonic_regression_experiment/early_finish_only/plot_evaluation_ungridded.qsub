python3 -u "${CODE_DIR_NAME}/plot_ungridded_evaluation.py" \
--input_eval_file_names "${model_dir_name}/validation_full_grid/isotonic_regression/bias-discretization-interval-interval=${bias_discretization_interval_interval}_min-cluster-size-px=${min_cluster_size_px}_buffer-distance-px=${buffer_distance_px}_do-backwards-clustering=${do_backwards_flag}/ungridded_evaluation.nc" \
