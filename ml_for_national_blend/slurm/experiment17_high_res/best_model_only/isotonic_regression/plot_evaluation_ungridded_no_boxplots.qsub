model_dir_name="${TOP_MODEL_DIR_NAME}/nwp-inputs=ensemble_nam-nest_gridded-gfs-mos"
echo $model_dir_name

python3 -u "${CODE_DIR_NAME}/plot_ungridded_evaluation.py" \
--input_eval_file_name_or_pattern="${model_dir_name}/validation_full_grid/isotonic_regression/ungridded_evaluation_${target_field_name}.nc" \
--input_target_norm_file_name="${TARGET_NORM_FILE_NAME}" \
--plot_full_error_distributions=0 \
--confidence_level=0.95 \
--report_metrics_in_titles=1 \
--output_dir_name="${model_dir_name}/validation_full_grid/isotonic_regression/ungridded_evaluation"
