    --min_colour_percentiles 0.1 \
    --max_colour_percentiles 99.9 \
    --plot_diffs=1 \
    --max_colour_percentiles_for_diff 99.9 \
    --baseline_nwp_model_name="ensemble" \
    --baseline_nwp_model_dir_name="/scratch2/NCEPDEV/stmp/Ryan.Lagerquist/ml_for_national_blend_project/nwp_model_data_final/ensemble/processed/interp_to_nbm_grid" \
    --output_dir_name="${model_dir_name}/validation_full_grid/${INIT_TIME_STRINGS[$i]}"
    
