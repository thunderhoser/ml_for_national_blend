TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml_for_national_blend_models/experiment07_bells_and_whistles"

BATCH_SIZES=("025" "050" "075" "100" "025" "050" "075" "100" "025" "050" "075" "100" "025" "050" "075" "100" "025" "050" "075" "100")
